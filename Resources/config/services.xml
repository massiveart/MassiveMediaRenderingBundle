<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="massive_media_rendering.image" class="Massive\Bundle\MediaRenderingBundle\Rendering\Image\Image">
            <tag name="massive_media_rendering.image" />
        </service>
    
        <service id="massive_media_rendering.video" class="Massive\Bundle\MediaRenderingBundle\Rendering\Video\Video">
            <tag name="massive_media_rendering.video" />
        </service>
        
        <service id="massive_media_rendering.document.pdf" class="Massive\Bundle\MediaRenderingBundle\Rendering\Document\Pdf">
            <tag name="massive_media_rendering.document" />
        </service>
        
        <service id="massive_media_rendering.document" class="Massive\Bundle\MediaRenderingBundle\Rendering\Document\Document">
        </service>
        
        <service id="massive_media_rendering.generic" class="Massive\Bundle\MediaRenderingBundle\Rendering\RenderService">
            <argument type="service" id="massive_media_rendering.image" />
            <argument type="service" id="massive_media_rendering.document" />
            <argument type="service" id="massive_media_rendering.video" />
        </service>
    </services>


</container>
